@import 'nib'

.home-page
  width: 100%
  margin: 0 auto
  padding: 5px

  .logo-container
    width: 33%
    height: 33%
    text-align: center
    margin-bottom: 20px

  .slot
    margin-bottom: 20px
    a
      display: block
      height: 128px
      background-color: #000
      border: 3px solid #444
    img
      display: block
      position: relative
      top: 50%
      -webkit-transform: translateY(-50%)
      -ms-transform: translateY(-50%)
      transform: translateY(-50%)
      margin: 0 auto
  .qr-code
    height: 250px
    width: 250px
